@{
    ViewData["Title"] = "Pagina non trovata";
    var code = ViewData["StatusCode"] ?? 404;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5 mb-5">
    <div class="card text-center mx-auto" style="max-width: 500px;">
        <div class="card-body">
            <h1 class="display-1">404</h1>
            <h2 class="card-title mb-3">Pagina non trovata</h2>
            <p class="card-text">
                Spiacenti, la risorsa richiesta non esiste o non è accessibile.<br />
                Codice errore: <strong>@code</strong>
            </p>
        </div>
    </div>
</div>
