@model List<TaskViewModel>

@{
    ViewData["Title"] = "Task Disponibili";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Descrizione</th>
            <th>Tipologia</th>
            <th>Scadenza</th>
            <th>Priorità</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Descrizione</td>
                <td>@task.Tipologia</td>
                <td>@task.Scadenza.ToShortDateString()</td>
                <td>
                   
                        <form method="post" action="@Url.Action("AssignTask", "Task", new { taskId = task.Id })">
                            <button type="submit" class="btn btn-primary">Assegna Task</button>
                        </form>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
